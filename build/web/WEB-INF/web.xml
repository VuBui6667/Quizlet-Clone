<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	 version="3.1">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <filter>
        <filter-name>filter</filter-name>
        <filter-class>filter.filter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>filter</filter-name>
        <url-pattern>/createSet</url-pattern>
        <url-pattern>/addStudiedCard</url-pattern>
        <url-pattern>/classSet</url-pattern>
        <url-pattern>/controllerClassSet</url-pattern>
        <url-pattern>/controllerFolderSet</url-pattern>
        <url-pattern>/folder</url-pattern>
        <url-pattern>/createSet</url-pattern>
        <url-pattern>/delete</url-pattern>
        <url-pattern>/folderSet</url-pattern>
        <url-pattern>/home</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/resetStudiedCard</url-pattern>
        <url-pattern>/study</url-pattern>
        <url-pattern>/update</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>homeLogin.jsp</welcome-file>
    </welcome-file-list>
</web-app>
